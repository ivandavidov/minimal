#!/bin/sh

#SQUASHFS_SUPPORT=1
#NTFS_SUPPORT=1
#TARGET_FILE=minimal_linux_live.iso
#KEYMAP=de

### nothing to edit after this line ###

set -ve

if [ "${SOURCED}" ] ; then
	return
fi

SCRIPTFILE=$(readlink -f $0 2>/dev/null)
SCRIPTDIR=${CC_SCRIPTFILE%/*}

if [ ! "${KERNEL_VERSION}" ] ; then
	KERNEL_VERSION=$(wget -qO- https://www.kernel.org/pub/linux/kernel/v4.x/ | grep -Po "(?<=linux-)\d\.(\d+|\d+\.)+(?=.tar.xz)" | sort -uV | tail -1)
fi

if [ ! "${BUSYBOX_VERSION}" ] ; then
	BUSYBOX_VERSION=$(wget -qO- http://busybox.net/downloads | grep -Po "(?<=busybox-)\d\.\d\d\.\d(?=.tar.bz2)" | sort -uV | tail -1)
fi

KERNEL_SOURCE_URL=https://www.kernel.org/pub/linux/kernel/v4.x/linux-${KERNEL_VERSION}.tar.xz
BUSYBOX_SOURCE_URL=http://busybox.net/downloads/busybox-${BUSYBOX_VERSION}.tar.bz2

SOURCED=1
